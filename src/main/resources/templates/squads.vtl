<h1>All Squads</h1>
#if($squads)
<ol>
  #foreach ($squad in $squads)
    <!-- Card -->
    <div class="card">

      <!-- Card image -->

      <!-- Card content -->
      <div class="card-body">

        <!-- Title -->
        <h4 class="card-title"><a>$squad.getName()</a></h4>
        <!-- Text -->
        <p class="card-text">Squad Cause:$squad.getCause()</p>
        <p class="card-text">Squad Maximum:$squad.getMax()</p>
        <!-- Button -->
        <a href="/squads/$squad.getId()" class="btn btn">View Heroes</a>

      </div>

    </div>
    <!-- Card -->
    <!-- Card -->
  #end
</ol>
#else
 <h3> You have no Squads yet!</h3>
 #end
<a href="/squads/new"><button class="btn btn-cyan">Add a new Squad</button></a>